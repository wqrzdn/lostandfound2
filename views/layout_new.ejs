                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown" style="position: absolute !important; right: 0 !important; left: auto !important; z-index: 9999 !important; min-width: 10rem !important;">
                  <% if (user.role !== 'admin') { %>
                  <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i> My Profile</a></li>
                  <li><a class="dropdown-item" href="/dashboard"><i class="fas fa-tachometer-alt me-2"></i> My Dashboard</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <% } %>
                  <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                </ul>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link login-btn px-3 py-1" href="/auth/login"><i class="fas fa-sign-in-alt me-1"></i> Login</a>
              </li>
              <li class="nav-item">
