  <link rel="stylesheet" href="/css/modern-design.css">
  <!-- Critical fixes for dropdown menus - increased specificity -->
  <style>
    /* Force dropdown menus to display properly */
    body .dropdown-menu {
      position: absolute !important;
      z-index: 9999 !important;
      display: none !important;
      opacity: 1 !important;
      visibility: visible !important;
      transform: none !important;
      top: 100% !important;
      margin-top: 0.5rem !important;
      border: 1px solid rgba(0,0,0,.15) !important;
      border-radius: 0.25rem !important;
      background-color: #fff !important;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175) !important;
      overflow: visible !important;
      min-width: 10rem !important;
    }
    body .dropdown-menu.show {
      display: block !important;
    }
    /* Ensure container doesn't clip dropdowns */
    body .container {
      overflow: visible !important;
    }
    /* Ensure navbar doesn't clip dropdowns */
    body .navbar {
      overflow: visible !important;
    }
    /* Ensure no elements overlap the dropdown */
    body .dropdown {
      position: relative !important;
      z-index: 1001 !important;
    }
    /* Fix positioning issues with navbar items */
    body .navbar-nav {
      position: static !important;
    }
    body .navbar-nav > li.dropdown {
      position: relative !important;
    }
    body .dropdown-item:hover {
      background-color: rgba(0,0,0,.05) !important;
    }
  </style>
  <style>
    :root {
      --bs-primary: #3b82f6;
      --bs-primary-rgb: 59, 130, 246;
      --bs-secondary: #6c757d;
      --bs-danger: #ef4444;
      --bs-success: #10b981;
      --bs-info: #3b82f6;
      --bs-warning: #f59e0b;
      --bs-light: #f8fafc;
      --bs-dark: #1e293b;
      --shadow-sm: 0 2px 5px 0 rgba(0,0,0,0.03);
      --shadow: 0 4px 6px rgba(0,0,0,0.05);
      --shadow-md: 0 5px 10px rgba(0,0,0,0.08);
      --shadow-lg: 0 10px 15px rgba(0,0,0,0.1);
      --border-radius: 0.5rem;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      background-color: #ffffff;
      color: #4b5563;
      line-height: 1.7;
      letter-spacing: -0.011em;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    .navbar {
      box-shadow: var(--shadow);
      background: #000000;
    }
    
    .navbar-brand {
      font-weight: 700;
      letter-spacing: -0.02em;
      font-size: 1.35rem;
      padding: 0.5rem 0;
    }
    
    .nav-link {
      font-size: 0.95rem;
      font-weight: 500;
      padding: 0.65rem 1rem;
      border-radius: 0.375rem;
    }
    
    .dropdown-item {
      font-size: 0.9rem;
      padding: 0.5rem 1.5rem;
      border-radius: 0.25rem;
      margin: 0.125rem 0.5rem;
    }
    
    .btn-primary {
      background-color: var(--bs-primary);
      border-color: var(--bs-primary);
      box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
      border-radius: var(--border-radius);
      padding: 0.5rem 1.25rem;
      font-weight: 500;
    }
    
    .btn-primary:hover {
      background-color: #2563eb !important;
      border-color: #2563eb !important;
    }
    
    .btn-outline-primary {
      border-color: var(--bs-primary);
      color: var(--bs-primary);
      font-weight: 500;
      border-radius: var(--border-radius);
    }
    
    .btn-outline-primary:hover {
      background-color: var(--bs-primary);
      border-color: var(--bs-primary);
    }

    /* Modern card styles */
    .card {
      border: none;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow);
      overflow: hidden;
      background: white;
    }
    
    /* Form controls */
    .form-control, .form-select {
      border-radius: 0.5rem;
      padding: 0.625rem 1rem;
      border-color: #eaecef;
      background-color: #f9fafb;
    }
    
    .form-control:focus, .form-select:focus {
      border-color: #3b82f6;
      box-shadow: none;
      background-color: #ffffff;
    }
    
    /* Badge styles */
    .badge {
      padding: 0.35em 0.65em;
      font-weight: 600;
      border-radius: 9999px;
    }
    
    /* Alert styles */
    .alert {
      border: none;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-sm);
    }
    
    footer {
      font-size: 0.9rem;
      background-color: white;
      border-top: 1px solid #f0f0f0;
      padding: 2rem 0;
    }
    
    /* Authentication buttons styling */
    .auth-buttons .nav-link {
      margin: 0 5px;
      border-radius: 4px;
    }

    .auth-buttons .login-btn {
      border: 1px solid rgba(255,255,255,0.3);
      background-color: rgba(255,255,255,0.15);
      border-radius: 0.5rem;
    }

    .auth-buttons .signup-btn {
      background-color: white;
      color: var(--bs-primary) !important;
      border: none;
      border-radius: 0.5rem;
    }

    /* Dropdown menu styling */
    .dropdown-menu {
      border: none;
      box-shadow: var(--shadow-lg);
      border-radius: 0.75rem;
      padding: 0.75rem 0;
    }

    .dropdown-divider {
      margin: 0.5rem 1rem;
      opacity: 0.1;
    }

    .dropdown-header {
      color: #6b7280;
      font-size: 0.8rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* Icon styling */
    .icon-badge {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      border-radius: 9999px;
      background: rgba(59, 130, 246, 0.2);
      color: var(--bs-primary);
      margin-right: 0.75rem;
    }

    /* Container padding */
    .content-container {
      padding: 2rem 0;
    }

    /* Scrollbar styling */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    ::-webkit-scrollbar-track {
      background: #f1f5f9;
    }

    ::-webkit-scrollbar-thumb {
      background: #cbd5e1;
      border-radius: 9999px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #94a3b8;
    }
    
    /* Improve modal performance */
    .modal {
      will-change: auto !important;
    }
    
    .modal-backdrop, 
    .modal-content {
      backface-visibility: hidden;
    }
  </style>
</head>
<body>
