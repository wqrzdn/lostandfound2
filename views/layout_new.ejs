  <!-- Bootstrap 5 Bundle with Popper - required for dropdowns -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JavaScript -->
  <script src="/js/main.js"></script>
  <!-- Super aggressive dropdown fix with direct DOM manipulation -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize all Bootstrap dropdowns properly
      var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
      var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
        return new bootstrap.Dropdown(dropdownToggleEl);
      });
      
      // Fix any styling issues that might occur
      document.querySelectorAll('.dropdown-menu').forEach(function(menu) {
        menu.style.zIndex = '9999';
        menu.style.minWidth = '10rem';
      });
      
      // Fix navbar collapse for mobile
      var navbarToggler = document.querySelector('.navbar-toggler');
      var navbarCollapse = document.querySelector('.navbar-collapse');
      
      if (navbarToggler && navbarCollapse) {
        navbarToggler.addEventListener('click', function() {
          navbarCollapse.classList.toggle('show');
        });
      }
    });
  </script>
</body>
</html>
